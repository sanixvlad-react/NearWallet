<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingRight="@dimen/padding_max"
    android:paddingLeft="@dimen/padding_max"
    android:paddingTop="@dimen/padding_min"
    android:paddingBottom="@dimen/padding_min"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_nft_market"
        android:background="@drawable/circle_image_background"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/txt_nft_market_name"
        style="@style/TextViewDefaultBold"
        android:layout_toRightOf="@+id/img_nft_market"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
