<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/padding_min"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_max"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="@dimen/padding_max">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
           android:id="@+id/rlt_settings"
           android:padding="@dimen/padding_max"
           android:background="?android:attr/selectableItemBackground"
           android:clickable="true"
           android:layout_width="match_parent"
           android:layout_height="40dp">

            <TextView
                android:id="@+id/txt_wallet_balance"
                android:text="@string/settings"
                style="@style/TextViewDefaultBold"
                android:drawablePadding="@dimen/padding_min"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

           <ImageView
               android:id="@+id/img_expand"
               android:src="@drawable/ic_chevrone_down"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lt_settings"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlt_settings_language"
                android:padding="@dimen/padding_max"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:text="@string/language"
                    style="@style/TextViewDefault"
                    android:drawablePadding="@dimen/padding_min"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_settings_language"
                    style="@style/TextViewDefaultBold"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <View
                android:background="@color/colorAccent"
                android:layout_marginLeft="@dimen/padding_max"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:id="@+id/rlt_setting_theme"
                android:padding="@dimen/padding_max"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:text="@string/theme"
                    style="@style/TextViewDefault"
                    android:drawablePadding="@dimen/padding_min"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_settings_theme"
                    style="@style/TextViewDefaultBold"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <View
                android:background="@color/colorAccent"
                android:layout_marginLeft="@dimen/padding_max"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:id="@+id/rlt_wallet_balance"
                android:padding="@dimen/padding_max"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:text="@string/application_version"
                    style="@style/TextViewDefault"
                    android:drawablePadding="@dimen/padding_min"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_settings_app_version"
                    style="@style/TextViewDefaultBold"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </LinearLayout>

         <View
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
           android:id="@+id/rlt_help"
           android:padding="@dimen/padding_max"
           android:background="?android:attr/selectableItemBackground"
           android:clickable="true"
           android:layout_width="match_parent"
           android:layout_height="40dp">

           <TextView
               android:id="@+id/txt_help"
               android:text="@string/help"
               style="@style/TextViewDefaultBold"
               android:layout_centerVertical="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

           <ImageView
               android:src="@drawable/ic_chevrone_right"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>