<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/padding_max"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_transaction"
        android:background="@drawable/border_image_background"
        android:layout_marginLeft="@dimen/padding_max"
        android:layout_marginRight="@dimen/padding_max"
        android:src="@drawable/ic_chevrone_right_left"
        android:padding="@dimen/padding_max"
        android:layout_width="36dp"
        android:layout_height="36dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/lt_amount"
        android:layout_toRightOf="@+id/img_transaction"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_transaction_name"
            style="@style/TextViewDefaultBold"
            android:text="asd"
            android:gravity="right"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_descriprion"
            android:text="asd"
            style="@style/TextViewDefault"
            android:gravity="right"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lt_amount"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_amount"
            android:text="asd"
            android:gravity="right"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_time"
            android:text="asd"
            style="@style/TextViewDefault"
            android:layout_gravity="right"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>
