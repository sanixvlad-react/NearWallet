<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/padding_min"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="@dimen/padding_max">

    <LinearLayout
        android:id="@+id/lt_all_data_balance"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ru.sanix.SwitchSecurityView
            android:id="@+id/view_switch_ledger"
            app:ssv_title="@string/ledger_hardware_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ru.sanix.SwitchSecurityView
            android:id="@+id/view_switch_passphrase"
            app:ssv_title="@string/passphrase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

         <View
            android:background="@color/colorAccent"
            app:ssv_title="@string/ledger_hardware_wallet"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ru.sanix.SwitchSecurityView
            android:id="@+id/view_switch_email"
            app:ssv_title="@string/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/colorAccent"
            app:ssv_title="@string/ledger_hardware_wallet"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ru.sanix.SwitchSecurityView
            android:id="@+id/view_switch_phone"
            app:ssv_title="@string/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ru.sanix.SwitchSecurityView
            android:id="@+id/view_switch_two_factor_authentication"
            app:ssv_title="@string/two_factor_authentication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
