<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/padding_max"
    android:layout_marginRight="@dimen/padding_max"
    android:layout_marginTop="@dimen/padding_min"
    android:layout_marginBottom="@dimen/padding_min"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="@dimen/corner_radius_max">

    <RelativeLayout
        android:paddingTop="@dimen/padding_max"
        android:paddingBottom="@dimen/padding_max"
        android:id="@+id/rlt_data"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:paddingLeft="@dimen/padding_max"
        android:paddingRight="@dimen/padding_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/view_background"
            android:background="@drawable/text_round_background"
            android:gravity="center"
            android:layout_width="36dp"
            android:layout_height="36dp">

            <TextView
                android:id="@+id/txt_wallet_indicator"
                android:text="S"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@id/txt_waller_path"
            android:text="sanix.near"
            android:textSize="17sp"
            style="@style/TextViewDefaultBold"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/view_background"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
